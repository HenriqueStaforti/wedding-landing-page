---
// PaymentModal is now a shared component with client-side state management
---

<div
  id="payment-modal"
  class="fixed inset-0 z-50 hidden items-center justify-center bg-black/50 backdrop-blur-sm p-4"
>
  <div
    class="w-full max-w-2xl rounded-2xl bg-white shadow-2xl flex flex-col max-h-[90vh]"
    style="background-color: var(--color-secondary);"
  >
    <!-- Header -->
    <div
      class="border-b border-white/10 p-6 flex-shrink-0"
      style="border-color: color-mix(in srgb, var(--color-primary), transparent 80%);"
    >
      <div class="flex items-center justify-between">
        <div>
          <h2
            id="modal-title"
            class="text-2xl font-bold"
            style="color: var(--color-primary);"
          >
            Produto
          </h2>
          <p
            id="modal-price"
            class="mt-2 text-lg font-semibold"
            style="color: var(--color-accent);"
          >
            R$ 0,00
          </p>
        </div>
        <button
          id="close-modal-btn"
          class="text-gray-500 transition-colors hover:text-gray-700"
          aria-label="Fechar modal"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M18 6l-12 12M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Payment Options Tabs -->
    <div class="border-b flex-shrink-0" style="border-color: color-mix(in srgb, var(--color-primary), transparent 80%);">
      <div class="flex">
        <button
          id="pix-tab"
          class="flex-1 border-b-2 px-6 py-4 font-semibold transition-colors"
          style="border-color: var(--color-accent); color: var(--color-accent);"
        >
          PIX
        </button>
        <button
          id="card-tab"
          class="flex-1 border-b-2 px-6 py-4 font-semibold transition-colors"
          style="border-color: transparent; color: color-mix(in srgb, var(--color-primary), transparent 50%);"
        >
          Cartão
        </button>
      </div>
    </div>

    <!-- Content -->
    <div class="overflow-y-auto flex-1">
      <div class="p-8">
      <!-- PIX Payment -->
      <div id="pix-content" class="block">
        <div class="text-center">
          <h3
            class="mb-6 text-xl font-semibold"
            style="color: var(--color-primary);"
          >
            Pagar com PIX
          </h3>

          <!-- QR Code Container -->
          <div class="mb-6 flex justify-center">
            <div
              class="rounded-lg p-4"
              style="background-color: var(--color-background);"
            >
              <img
                id="qr-code"
                src="https://api.qrserver.com/v1/create-qr-code/?size=250x250&data=00020126580014br.bcb.brcode01051.0.063047A33DB57F6554CBF4B3F5D6E9D80520400005303986540510.005802BR5913CASAL TESTE6009SAO PAULO62410503***63041D3D"
                alt="QR Code PIX"
                class="h-48 w-48"
              />
            </div>
          </div>

          <!-- Amount Display -->
          <div class="mb-6">
            <p
              class="mb-2 text-sm"
              style="color: color-mix(in srgb, var(--color-primary), transparent 50%);"
            >
              Valor a transferir:
            </p>
            <p
              id="pix-amount"
              class="text-3xl font-bold"
              style="color: var(--color-accent);"
            >
              R$ 0,00
            </p>
          </div>

          <!-- Instructions -->
          <div
            class="rounded-lg p-4"
            style="background-color: color-mix(in srgb, var(--color-accent), transparent 90%);"
          >
            <p
              class="text-sm leading-relaxed"
              style="color: color-mix(in srgb, var(--color-accent), var(--color-primary));"
            >
              1. Abra o aplicativo do seu banco<br />
              2. Selecione a opção PIX<br />
              3. Escaneie o QR Code acima ou copie a chave<br />
              4. Confirme os dados e digite sua senha
            </p>
          </div>

          <!-- Copy Button (for manual entry) -->
          <button
            id="copy-pix-key"
            class="mt-6 w-full rounded-lg px-6 py-3 font-semibold transition-all duration-200"
            style="background-color: var(--color-accent); color: var(--color-text-light);"
          >
            Copiar Chave PIX
          </button>
        </div>
      </div>

      <!-- Card Payment -->
      <div id="card-content" class="hidden">
        <div class="text-center">
          <h3
            class="mb-6 text-xl font-semibold"
            style="color: var(--color-primary);"
          >
            Pagar com Cartão
          </h3>

          <!-- Information -->
          <div
            class="mb-6 rounded-lg p-4"
            style="background-color: color-mix(in srgb, var(--color-accent), transparent 90%);"
          >
            <p
              class="text-sm"
              style="color: color-mix(in srgb, var(--color-accent), var(--color-primary));"
            >
              Você será redirecionado para um ambiente seguro do Mercado Pago para
              completar seu pagamento.
            </p>
          </div>

          <!-- Amount Display -->
          <div class="mb-8">
            <p
              class="mb-2 text-sm"
              style="color: color-mix(in srgb, var(--color-primary), transparent 50%);"
            >
              Valor a pagar:
            </p>
            <p
              id="card-amount"
              class="text-3xl font-bold"
              style="color: var(--color-accent);"
            >
              R$ 0,00
            </p>
          </div>

          <!-- Mercado Pago Button -->
          <button
            id="mercado-pago-btn"
            class="w-full rounded-lg px-6 py-4 font-semibold transition-all duration-200"
            style="background-color: #009EE3; color: white; border: none; cursor: pointer;"
          >
            Ir para Mercado Pago
          </button>

          <!-- Loading state -->
          <div id="loading-state" class="hidden">
            <p
              class="text-sm"
              style="color: color-mix(in srgb, var(--color-primary), transparent 50%);"
            >
              Preparando seu pagamento...
            </p>
          </div>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Modal state
  let currentGiftData = {
    id: "",
    title: "",
    price: "",
    priceNumber: 0,
  };

  const modal = document.getElementById("payment-modal");
  const closeBtn = document.getElementById("close-modal-btn");
  const pixTab = document.getElementById("pix-tab");
  const cardTab = document.getElementById("card-tab");
  const pixContent = document.getElementById("pix-content");
  const cardContent = document.getElementById("card-content");
  const mercadoPagoBtn = document.getElementById("mercado-pago-btn");
  const loadingState = document.getElementById("loading-state");
  const copyBtn = document.getElementById("copy-pix-key");
  const pixKey = "00020126580014br.bcb.brcode01051.0.063047A33DB57F6554CBF4B3F5D6E9D80520400005303986540510.005802BR5913CASAL TESTE6009SAO PAULO62410503***63041D3D";

  // Close modal
  function closeModal() {
    modal?.classList.add("hidden");
  }

  closeBtn?.addEventListener("click", closeModal);
  modal?.addEventListener("click", (e) => {
    if (e.target === modal) {
      closeModal();
    }
  });

  // Tab switching
  pixTab?.addEventListener("click", () => {
    pixContent?.classList.remove("hidden");
    cardContent?.classList.add("hidden");
    if (pixTab) {
      pixTab.style.borderColor = "var(--color-accent)";
      pixTab.style.color = "var(--color-accent)";
    }
    if (cardTab) {
      cardTab.style.borderColor = "transparent";
      cardTab.style.color = "color-mix(in srgb, var(--color-primary), transparent 50%)";
    }
  });

  cardTab?.addEventListener("click", () => {
    pixContent?.classList.add("hidden");
    cardContent?.classList.remove("hidden");
    if (cardTab) {
      cardTab.style.borderColor = "var(--color-accent)";
      cardTab.style.color = "var(--color-accent)";
    }
    if (pixTab) {
      pixTab.style.borderColor = "transparent";
      pixTab.style.color = "color-mix(in srgb, var(--color-primary), transparent 50%)";
    }
  });

  // Copy PIX key
  copyBtn?.addEventListener("click", async () => {
    try {
      await navigator.clipboard.writeText(pixKey);
      const originalText = copyBtn.textContent;
      copyBtn.textContent = "✓ Copiado!";
      setTimeout(() => {
        copyBtn.textContent = originalText;
      }, 2000);
    } catch (err) {
      console.error("Falha ao copiar:", err);
    }
  });

  // Mercado Pago button handler
  mercadoPagoBtn?.addEventListener("click", async () => {
    mercadoPagoBtn.style.display = "none";
    loadingState?.classList.remove("hidden");

    try {
      const response = await fetch("/api/create-preference", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({
          giftId: currentGiftData.id,
          giftTitle: currentGiftData.title,
          giftPrice: currentGiftData.priceNumber,
        }),
      });

      console.log("PaymentModal: Response status:", response.status);

      if (!response.ok) {
        throw new Error("Falha ao criar preferência de pagamento");
      }

      const data = await response.json();
      console.log("PaymentModal: Response data:", data);

      const { checkoutUrl } = data;

      if (!checkoutUrl) {
        throw new Error("Nenhuma URL de checkout retornada");
      }

      // Redirect directly to Mercado Pago checkout URL
      console.log("PaymentModal: Redirecting to:", checkoutUrl);
      window.location.href = checkoutUrl;
    } catch (error) {
      console.error("Erro ao processar pagamento:", error);
      alert("Erro ao processar o pagamento. Tente novamente.");

      mercadoPagoBtn.style.display = "block";
      loadingState?.classList.add("hidden");
    }
  });

  // Expose openPaymentModal function globally
  (window as any).openPaymentModal = (giftId: string, title: string, price: string) => {
    // Extract numeric value from price string (e.g., "R$ 2.499" -> 2499)
    const priceNumber = parseInt(price.replace(/\D/g, ""));
    const formattedPrice = (priceNumber / 100).toLocaleString("pt-BR", {
      style: "currency",
      currency: "BRL",
    });

    currentGiftData = {
      id: giftId,
      title,
      price,
      priceNumber,
    };

    // Update modal content
    const titleElement = document.getElementById("modal-title");
    const priceElement = document.getElementById("modal-price");
    const pixAmountElement = document.getElementById("pix-amount");
    const cardAmountElement = document.getElementById("card-amount");

    if (titleElement) titleElement.textContent = title;
    if (priceElement) priceElement.textContent = formattedPrice;
    if (pixAmountElement) pixAmountElement.textContent = formattedPrice;
    if (cardAmountElement) cardAmountElement.textContent = formattedPrice;

    // Reset button state
    mercadoPagoBtn!.style.display = "block";
    loadingState?.classList.add("hidden");

    // Open modal
    modal?.classList.remove("hidden");
  };
</script>

<style>
  #payment-modal:not(.hidden) {
    display: flex;
  }
</style>
